<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="Skip"
            android:textColor="#FF6E01"
            android:textSize="@dimen/_17sdp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_217sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/online_groceries_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_217sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/online_groceries_2" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_217sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/online_groceries_3" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_217sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/online_groceries_4" />
            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:layout_width="@dimen/_218sdp"
            android:layout_height="@dimen/_72sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Welcome to Our \n India Mart"
            android:textColor="#1A1A1A"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="@dimen/_308sdp"
            android:layout_height="@dimen/_68sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Amet minim mollit non deserunt ullamco est sit aliqua\n
dolor do amet sint. Velit officia consequat duis enim\n
velit mollit. Exercitation veniam consequat sunt\n
nostrud amet."
            android:textColor="#801A1A1A"
            android:textSize="@dimen/_12sdp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_35sdp"
                app:cardBackgroundColor="#FF6E01"
                app:cardCornerRadius="@dimen/_221sdp">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow" />
            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:indeterminateTint="#FF6E01" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>